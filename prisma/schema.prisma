generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Share {
  fromUserId String
  toUserId String
  fileId String

  @@id([fromUserId, toUserId, fileId])
}

model DailyStorage {
  userId String
  date String
  mbUsed Float

  @@id([userId, date])
  @@index([date])
}

model User {
  id String @id
  isAdmin Boolean
}

model File {
  fileId String @id @default(cuid())
  userId String
  cloudFileName String
  originalName String
  size Float
  date String
}
